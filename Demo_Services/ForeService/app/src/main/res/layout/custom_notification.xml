<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/img_song"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_music"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_song"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_title_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_singer_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_clear"
        android:layout_width="59dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:src="@drawable/img_clear" />
    <ImageView
        android:id="@+id/img_play_or_pause"
        android:layout_width="59dp"
        android:layout_height="31dp"
        android:layout_toStartOf="@id/img_clear"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/img_pause" />
</RelativeLayout>